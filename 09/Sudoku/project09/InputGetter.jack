// Simple Class that provides getSingleDigit() function that valids if digit from 1 to 9 was typed by the user 
class InputGetter {
   function int getSingleDigit() {
      var int i;
      let i = Keyboard.readInt("Enter a number: ");
      if (i > 10  | i < 1) {
         do Output.printString("You are not allowed to provide inputs different than digits from 0 to 9");
         do Output.println();
         do Sys.error(2);
      }
      return i;
   }
}